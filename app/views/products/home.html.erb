<h1>Joe's Minecraft Shop!</h1>

<% if @products.any? %>
  <h3>Recently added:</h3>
  <ul>
    <% @most_recent.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>
  <h3>Most reviewed:</h3>
  <ul>
  <li><%= link_to @most_reviews.first.name, product_path(@most_reviews.first)%></li>
  </ul>
  <h3>Products from the United States:</h3>
  <ul>
    <% @in_united_states.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no products yet.</p>
<% end %>
<p><%= link_to "View all products", products_path %></p>
